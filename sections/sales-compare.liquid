{% comment %}
  Sales Compare - 製品比較表セクション

  特徴：
  - 一体型 vs 左右分割オーダーの比較表
  - 評価項目：手首角誘導、親指到達、局所圧
  - 記号：○（優れている）/△（やや劣る）/–（該当なし）
  - 測定条件注記表示
  - レスポンシブ対応（モバイル横スクロール）
{% endcomment %}

<link rel="stylesheet" href="{{ 'sales-compare.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'sales-compare.css' | asset_url }}"></noscript>

<style>
  .eg-sc-section-{{ section.id }} {
    background-color: {{ section.settings.eg_sc_bg }};
    padding: {{ section.settings.eg_sc_padding_y }}px {{ section.settings.eg_sc_padding_x_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .eg-sc-section-{{ section.id }} {
      padding: {{ section.settings.eg_sc_padding_y }}px {{ section.settings.eg_sc_padding_x_desktop }}px;
    }
  }

  .eg-sc-section-{{ section.id }} .eg-sc-heading {
    color: {{ section.settings.eg_sc_heading_color }};
    font-size: {{ section.settings.eg_sc_heading_size }}px;
  }

  @media screen and (max-width: 749px) {
    .eg-sc-section-{{ section.id }} .eg-sc-heading {
      font-size: calc({{ section.settings.eg_sc_heading_size }}px * 0.7);
    }
  }

  .eg-sc-section-{{ section.id }} .eg-sc-subtext {
    color: {{ section.settings.eg_sc_text_color }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-table th {
    background-color: {{ section.settings.eg_sc_header_bg }};
    color: {{ section.settings.eg_sc_header_text }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-table td {
    color: {{ section.settings.eg_sc_text_color }};
    border-color: {{ section.settings.eg_sc_border_color }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-table tbody tr:nth-child(even) {
    background-color: {{ section.settings.eg_sc_row_even_bg }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-symbol--excellent {
    color: {{ section.settings.eg_sc_symbol_excellent_color }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-symbol--good {
    color: {{ section.settings.eg_sc_symbol_good_color }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-symbol--none {
    color: {{ section.settings.eg_sc_symbol_none_color }};
  }

  .eg-sc-section-{{ section.id }} .eg-sc-note {
    color: {{ section.settings.eg_sc_note_color }};
  }
</style>

<section
  class="eg-sc-section eg-sc-section-{{ section.id }}"
  role="region"
  aria-label="{{ section.settings.eg_sc_heading | escape }}"
>
  <div class="eg-sc-container">
    {%- if section.settings.eg_sc_heading != blank -%}
      <h2 class="eg-sc-heading">{{ section.settings.eg_sc_heading }}</h2>
    {%- endif -%}

    {%- if section.settings.eg_sc_subtext != blank -%}
      <p class="eg-sc-subtext">{{ section.settings.eg_sc_subtext }}</p>
    {%- endif -%}

    <div class="eg-sc-table-wrapper">
      <table class="eg-sc-table" role="table">
        <thead>
          <tr>
            <th scope="col" class="eg-sc-table__header eg-sc-table__header--row">評価項目</th>
            <th scope="col" class="eg-sc-table__header eg-sc-table__header--col1">
              {{ section.settings.eg_sc_col1_label }}
            </th>
            <th scope="col" class="eg-sc-table__header eg-sc-table__header--col2">
              {{ section.settings.eg_sc_col2_label }}
            </th>
          </tr>
        </thead>
        <tbody>
          {%- for block in section.blocks -%}
            {%- if block.type == 'comparison_row' -%}
              <tr>
                <th scope="row" class="eg-sc-table__row-label">
                  {{ block.settings.eg_sc_row_label }}
                </th>
                <td class="eg-sc-table__cell">
                  <span class="eg-sc-symbol eg-sc-symbol--{{ block.settings.eg_sc_col1_symbol }}">
                    {%- case block.settings.eg_sc_col1_symbol -%}
                      {%- when 'excellent' -%}○
                      {%- when 'good' -%}△
                      {%- when 'none' -%}–
                    {%- endcase -%}
                  </span>
                </td>
                <td class="eg-sc-table__cell">
                  <span class="eg-sc-symbol eg-sc-symbol--{{ block.settings.eg_sc_col2_symbol }}">
                    {%- case block.settings.eg_sc_col2_symbol -%}
                      {%- when 'excellent' -%}○
                      {%- when 'good' -%}△
                      {%- when 'none' -%}–
                    {%- endcase -%}
                  </span>
                </td>
              </tr>
            {%- endif -%}
          {%- endfor -%}
        </tbody>
      </table>
    </div>

    {%- if section.settings.eg_sc_note != blank -%}
      <div class="eg-sc-note-wrapper">
        <p class="eg-sc-note">{{ section.settings.eg_sc_note }}</p>
      </div>
    {%- endif -%}

    {%- if section.settings.eg_sc_legend_show -%}
      <div class="eg-sc-legend">
        <p class="eg-sc-legend__title">記号の意味：</p>
        <ul class="eg-sc-legend__list">
          <li class="eg-sc-legend__item">
            <span class="eg-sc-symbol eg-sc-symbol--excellent">○</span> = 優れている・良好
          </li>
          <li class="eg-sc-legend__item">
            <span class="eg-sc-symbol eg-sc-symbol--good">△</span> = やや劣る・普通
          </li>
          <li class="eg-sc-legend__item">
            <span class="eg-sc-symbol eg-sc-symbol--none">–</span> = 該当なし・劣る
          </li>
        </ul>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Sales Compare",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "コンテンツ"
    },
    {
      "type": "text",
      "id": "eg_sc_heading",
      "label": "見出し",
      "default": "製品タイプ別比較"
    },
    {
      "type": "textarea",
      "id": "eg_sc_subtext",
      "label": "説明文",
      "default": "一体型キーボードと左右分割オーダーメイドの特性を比較"
    },
    {
      "type": "header",
      "content": "列ラベル"
    },
    {
      "type": "text",
      "id": "eg_sc_col1_label",
      "label": "列1（左）",
      "default": "一体型"
    },
    {
      "type": "text",
      "id": "eg_sc_col2_label",
      "label": "列2（右）",
      "default": "左右分割オーダー"
    },
    {
      "type": "header",
      "content": "測定条件注記"
    },
    {
      "type": "textarea",
      "id": "eg_sc_note",
      "label": "注記テキスト",
