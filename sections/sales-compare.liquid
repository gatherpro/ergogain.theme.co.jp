      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "最大幅",
      "default": 1200
    },
    {
      "type": "range",
      "id": "eg_sc_heading_size",
      "min": 24,
      "max": 56,
      "step": 2,
      "unit": "px",
      "label": "見出しサイズ",
      "default": 36
    },
    {
      "type": "header",
      "content": "カラー設定"
    },
    {
      "type": "color",
      "id": "eg_sc_bg",
      "label": "背景色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "eg_sc_heading_color",
      "label": "見出し色",
      "default": "#1d1d1f"
    },
    {
      "type": "color",
      "id": "eg_sc_text_color",
      "label": "テキスト色",
      "default": "#1d1d1f"
    },
    {
      "type": "color",
      "id": "eg_sc_header_bg",
      "label": "テーブルヘッダー背景色",
      "default": "#f5f5f7"
    },
    {
      "type": "color",
      "id": "eg_sc_header_text",
      "label": "テーブルヘッダーテキスト色",
      "default": "#1d1d1f"
