    },
    {
      "type": "checkbox",
      "id": "eg_sc_legend_show",
      "label": "記号の凡例を表示",
      "default": true
    },
    {
      "type": "header",
      "content": "レイアウト・スタイル"
    },
    {
      "type": "range",
      "id": "eg_sc_padding_y",
      "min": 40,
      "max": 160,
      "step": 10,
      "unit": "px",
      "label": "上下余白",
      "default": 80
    },
    {
      "type": "range",
      "id": "eg_sc_padding_x_mobile",
      "min": 16,
      "max": 64,
      "step": 4,
      "unit": "px",
      "label": "左右余白（モバイル）",
