<link rel="stylesheet" href="{{ 'featured-slider-v2.css' | asset_url }}">
<script src="{{ 'featured-slider-v2.js' | asset_url }}" defer></script>
{%- style -%}
.fs-v2-{{section.id}}{
--fs-v2-bg:{{section.settings.fs_v2_background_color}};
--fs-v2-text:{{section.settings.fs_v2_text_color}};
--fs-v2-card-width:{{section.settings.fs_v2_card_width}}px;
--fs-v2-gap:{{section.settings.fs_v2_card_gap}}px;
--fs-v2-heading-size:{{section.settings.fs_v2_heading_size}}px;
--fs-v2-heading-lh:{{section.settings.fs_v2_heading_line_height}};
--fs-v2-pt:{{section.settings.fs_v2_padding_top}}px;
--fs-v2-pb:{{section.settings.fs_v2_padding_bottom}}px;
}
{%- endstyle -%}
<section class="fs-v2 fs-v2-{{section.id}}" data-fs-v2>
<div class="fs-v2__container page-width">
{%- if section.settings.fs_v2_heading != blank -%}
<div class="fs-v2__header">
<h2 class="fs-v2__heading">{{section.settings.fs_v2_heading}}</h2>
{%- if section.settings.fs_v2_subtext != blank -%}
<p class="fs-v2__subtext">{{section.settings.fs_v2_subtext}}</p>
{%- endif -%}
</div>
{%- endif -%}
<div class="fs-v2__rail" data-rail>
{%- for block in section.blocks -%}
<div class="fs-v2__card" {{block.shopify_attributes}}>
{%- if block.settings.fs_v2_product_image != blank -%}
<div class="fs-v2__card-img-wrap">
<img src="{{block.settings.fs_v2_product_image | image_url: width: 600}}" alt="{{block.settings.fs_v2_product_name | escape}}" class="fs-v2__card-img" loading="lazy">
</div>
{%- endif -%}
<div class="fs-v2__card-content">
<h3 class="fs-v2__card-name">{{block.settings.fs_v2_product_name}}</h3>
<div class="fs-v2__card-price-wrap">
{%- if block.settings.fs_v2_compare_price != blank -%}
<span class="fs-v2__card-price-compare">{{block.settings.fs_v2_compare_price}}</span>
{%- endif -%}
<span class="fs-v2__card-price">{{block.settings.fs_v2_price}}</span>
</div>
{%- if block.settings.fs_v2_show_more_enable and block.settings.fs_v2_product_link != blank -%}
<a href="{{block.settings.fs_v2_product_link}}" class="fs-v2__card-link">{{block.settings.fs_v2_show_more_text}}</a>
{%- endif -%}
</div>
</div>
{%- endfor -%}
</div>
<div class="fs-v2__nav">
<button type="button" class="fs-v2__nav-btn fs-v2__nav-btn--prev" data-prev aria-label="Previous">
<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
</button>
<button type="button" class="fs-v2__nav-btn fs-v2__nav-btn--next" data-next aria-label="Next">
<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
</button>
</div>
</div>
</section>
{% schema %}
{
"name":"Featured Slider v2",
"settings":[
{"type":"text","id":"fs_v2_heading","label":"見出し","default":"人気の商品"},
{"type":"textarea","id":"fs_v2_subtext","label":"サブテキスト"},
{"type":"range","id":"fs_v2_card_width","min":180,"max":360,"step":10,"unit":"px","label":"カード幅","default":280},
{"type":"range","id":"fs_v2_card_gap","min":12,"max":48,"step":4,"unit":"px","label":"カード間隔","default":24},
{"type":"range","id":"fs_v2_heading_size","min":24,"max":56,"step":2,"unit":"px","label":"見出しサイズ","default":40},
{"type":"range","id":"fs_v2_heading_line_height","min":1,"max":1.5,"step":0.05,"label":"見出し行間","default":1.2},
{"type":"color","id":"fs_v2_text_color","label":"テキスト色","default":"#000000"},
{"type":"color","id":"fs_v2_background_color","label":"背景色","default":"#ffffff"},
{"type":"range","id":"fs_v2_padding_top","min":0,"max":120,"step":8,"unit":"px","label":"上余白","default":64},
{"type":"range","id":"fs_v2_padding_bottom","min":0,"max":120,"step":8,"unit":"px","label":"下余白","default":64}
],
"blocks":[
{"type":"product_card","name":"商品カード","settings":[
{"type":"image_picker","id":"fs_v2_product_image","label":"商品画像"},
{"type":"text","id":"fs_v2_product_name","label":"商品名","default":"商品名"},
{"type":"text","id":"fs_v2_price","label":"価格","default":"0"},
{"type":"text","id":"fs_v2_compare_price","label":"比較価格"},
{"type":"url","id":"fs_v2_product_link","label":"商品リンク"},
{"type":"checkbox","id":"fs_v2_show_more_enable","label":"もっと見るボタン表示","default":false},
{"type":"text","id":"fs_v2_show_more_text","label":"ボタンテキスト","default":"もっと見る"}
]}
],
"presets":[{"name":"Featured Slider v2"}]
}
{% endschema %}
